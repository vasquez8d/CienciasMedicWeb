@model Sol_CienciasMedicWeb.ViewModels.RegistroViewModel

@{
    ViewBag.Title = "_Registrar";
}



<!-- Modal1 -->
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <div class="signin-form profile">
                    <h3 class="agileinfo_sign">Regístrate</h3>
                    <div class="login-form">
                        
                        @using (Html.BeginForm("_Registrar", "Home", FormMethod.Post))
                        {
                            @Html.EditorFor(model => model.ObjInscripciones.INS_NOMBRES, new {htmlAttributes = new {@class = "form-control", placeholder = "Nombres", required = "required"}})

                            @Html.EditorFor(model => model.ObjInscripciones.INS_APELLIDOS, new {htmlAttributes = new {@class = "form-control", placeholder = "Apellidos", required = "required"}})

                            @Html.EditorFor(model => model.ObjInscripciones.INS_DNI, new {htmlAttributes = new {@class = "form-control", placeholder = "DNI", required = "required"}})

                            @Html.EditorFor(model => model.ObjInscripciones.INS_CELL, new {htmlAttributes = new {@class = "form-control", placeholder = "Celular", required = "required"}})

                            @Html.EditorFor(model => model.ObjInscripciones.INS_EMAIL, new {htmlAttributes = new {@class = "form-control", placeholder = "Correo Electrónico", required = "required"}})

                            <h2>¿En qué curso estas interesado?</h2>

                            <div align="left" style="margin-left: 50px; margin-top: 10px;">
                                @Html.EditorFor(model => model.Curso1)<span> Ciencias Básicas</span>
                                <br/>
                                @Html.EditorFor(model => model.Curso2)<span> Ciencias Clínicas Médicas</span>
                                <br/>
                                @Html.EditorFor(model => model.Curso3)<span> Ciencias Quirúrgicas</span>
                                <br/>
                            </div>
                            <div class="tp">
                                <input type="submit" value="Aceptar">
                            </div>
                        }

                    </div>
                    <div class="login-social-grids">
                        <ul>
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-rss"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- //Modal1 -->

